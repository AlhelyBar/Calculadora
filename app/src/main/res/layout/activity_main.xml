<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/Text1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:background="@color/Fondo"
                    android:gravity="right|bottom"
                    android:text="0"
                    android:textColor="@color/Numeros"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad1"
                android:text="AC"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Clean"
                ></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad1"
                android:text="+/-"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/btn10">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad1"
                android:text="%"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/btnPorcent">
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pad3"
                android:text="รท"
                android:textSize="50dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Divide"
                >
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="7"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Siete"

                ></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="8"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Ocho"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="9"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Nueve"

                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pad3"
                android:text="x"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Multiplica">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="4"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Cuatro"

                >

            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="5"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Cinco"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="6"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Seis"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pad3"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Resta">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="1"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Uno"
                ></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="2"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Dos"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/Pad2"
                android:text="3"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Tres"
                >
            </Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pad3"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Suma">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/Fondo"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/Pad2"
                android:text="0"
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:gravity="center"
                android:id="@+id/Cero"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/Pad2"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Punto">
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/pad3"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/Numeros"
                android:id="@+id/Igual">
            </Button>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>